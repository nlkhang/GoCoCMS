@using GoCoCMS.Web.Areas.Admin.Models.Category
@model CategoryModel

@{
  ViewBag.Title = "title";
  Layout = "_AdminLayout";
}

<form asp-controller="Category" asp-action="Edit" method="post">
  <div class="content-header clearfix">
    <h1 class="pull-left">
      Edit category
      <small>
        <i class="fa fa-arrow-circle-left"></i>
        <a asp-action="Index">bask to category list</a>
      </small>
    </h1>
    <div class="pull-right">
      <button type="submit" name="save" class="btn bg-blue">
        <i class="fa fa-floppy-o"></i>
        Save
      </button>
      <button type="submit" name="save-continue" class="btn bg-blue">
        <i class="fa fa-floppy-o"></i>
        Save and Continue
      </button>
    </div>
  </div>
  @await Html.PartialAsync("_CreateOrEdit", Model)
</form>